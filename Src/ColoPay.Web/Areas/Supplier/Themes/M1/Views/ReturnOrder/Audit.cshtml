<script type="text/javascript">
    $(function () {

        //隔行换色
        var trs = $('table.GridViewTyle tr');
        for (var i = 0; i < trs.length; i++) {
            if (i % 2 != 0) {
                trs.eq(i).addClass('eventrcolor');
            }
        }
        //鼠标移动效果
        $("table.GridViewTyle tr").hover(
            function () {
                $(this).addClass("tylehover");
            },
            function () {
                $(this).removeClass("tylehover");
            }
        );

        //修改应退金额
        $('#lnkSaveAmountAdjusted').click(function () {
            var roid = $(this).attr('roid');
            var aa = $('#txtAmountAdjusted').val();
            if (parseInt(roid) <= 0) {
                return false;
            }
            if (aa < 0) {
                ShowFailTip("请正确填写应退金额");
                return false;
            }
            $.ajax({
                url: $YSWL.BasePath + "ReturnOrder/SaveAmountAdjusted",
                type: 'post',
                dataType: 'text',
                async: false,
                timeout: 10000,
                data: { roid: roid, aa: aa },
                success: function (resultData) {
                    switch (resultData) {
                        case "AUDITED":
                            ShowFailTip("退货单已被审核, 操作失败！");
                            break;
                        case "NO":
                            ShowFailTip("操作失败");
                            break;
                        case "Repeat": //重复
                            $('[id$=txtAmountAdjusted]').hide();
                            $('[id$=lnkSaveAmountAdjusted]').hide();
                            $('[id$=lblAmountAdjusted]').show();
                            $('#imgModifyAmountAdjusted').show();
                        case "OK":
                            ShowSuccessTip("操作成功！");
                            $('[id$=txtAmountAdjusted]').hide();
                            $('[id$=lnkSaveAmountAdjusted]').hide();
                            $('[id$=lblAmountAdjusted]').text(aa).show();
                            $('#imgModifyAmountAdjusted').show();
                            break;
                        default:
                            ShowServerBusyTip("操作失败");
                            break;
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    ShowServerBusyTip("服务器没有返回数据，可能服务器忙，请稍候再试！");
                }
            });
        });


        //拒绝
        $('#btnRefusal').click(function () {
            var roid = $(this).attr('roid'); //退货单Id
            var refuseReason = $('#txtRefuseReason').val(); //拒绝理由
            var remark = $('#txtRemark').val(); //备注
            if (parseInt(roid) <= 0) {
                return false;
            }
            if (refuseReason == "") {
                ShowFailTip("请填写拒绝理由！");
                return false;
            }

            $.ajax({
                url: $YSWL.BasePath + "ReturnOrder/Refusal",
                type: 'post',
                dataType: 'text',
                async: false,
                timeout: 10000,
                data: { roid: roid, refuseReason: refuseReason, remark: remark },
                success: function (resultData) {
                    switch (resultData) {
                        case "REFUSEREASONISNULL":
                            ShowSuccessTip("请填写拒绝原因！");
                            break;
                        case "AUDITED":
                            ShowFailTip("退货单已被审核，操作失败！");
                            break;
                        case "NO":
                            ShowFailTip("操作失败");
                            break;
                        case "OK":
                            ShowSuccessTip("操作成功！");
                            setTimeout(function () {
                                javascript: parent.$.colorbox.close();
                                $('#btnSearch', window.parent.document).click();
                            }, 2000);
                            break;
                        default:
                            ShowServerBusyTip("操作失败");
                            break;
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    ShowServerBusyTip("服务器没有返回数据，可能服务器忙，请稍候再试！");
                }
            });
        });
       
       

        //通过
        $('#btnPass').click(function () {
            if (!AmountAdjustedTip()) {
                return false;
            }
            var roid = $(this).attr('roid'); //退货单Id
            if (parseInt(roid) <= 0) {
                return false;
            }
            var rg=  $('#chkReturngoods:checked').length>0?true:false;
            var remark = $('#txtRemark').val(); //备注
            $.ajax({
                url: $YSWL.BasePath + "ReturnOrder/Pass",
                type: 'post',
                dataType: 'text',
                async: false,
                timeout: 10000,
                data: { roid: roid,rg:rg, remark: remark },
                success: function (resultData) {
                    switch (resultData) {
                        case "AUDITED":
                            ShowFailTip("退货单已被审核, 操作失败！");
                            break;
                        case "NO":
                            ShowFailTip("操作失败");
                            break;
                        case "AMOUNTADJUSTED":
                            ShowFailTip("应退金额不能小于0！");
                        case "OK":
                            ShowSuccessTip("操作成功！");
                            setTimeout(function () {
                                javascript: parent.$.colorbox.close();
                                $('#btnSearch', window.parent.document).click();
                            }, 2000);
                            break;
                        default:
                            ShowServerBusyTip("操作失败");
                            break;
                    }
                },
                error: function (xmlHttpRequest, textStatus, errorThrown) {
                    ShowServerBusyTip("服务器没有返回数据，可能服务器忙，请稍候再试！");
                }
            });
        });



    });


    function UpdateAmountAdjusted(sender) {
        var amount = $(sender).parent().find('[id$=lblAmountAdjusted]').text();
        var context = $(sender).hide().parent();
        context.find('[id$=txtAmountAdjusted]').show().val(amount);
        context.find('[id$=lnkSaveAmountAdjusted]').show();
        context.find('[id$=lblAmountAdjusted]').hide();
    }

    //应退金额提示
    function AmountAdjustedTip() {
        var amount = parseFloat($('[id$="lblAmountAdjusted"]').text());
        if (confirm('您确认应退金额为 ' + amount.toFixed(2) + ' 吗？')) {
            return true;
        } else {
            return false;
        }
    }     
</script>

